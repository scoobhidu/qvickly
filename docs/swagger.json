                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "Item ID to update",
                        "name": "item_id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Inventory update request (all fields optional)",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/vendors.UpdateInventoryRequest"
                        }
                    }
                ],
                "responses": {}
            },
            "delete": {
