                "item_id",
                "stock_quantity"
            ],
            "properties": {
                "item_id": {
                    "type": "integer",
                    "example": 456
                },
                "price_override": {
                    "type": "number",
                    "minimum": 0,
                    "example": 11.99
                },
                "stock_quantity": {
                    "type": "integer",
                    "minimum": 0,
                    "example": 50
                }
            }
        },
        "vendors.Category": {
            "type": "object",
            "properties": {
                "id": {
